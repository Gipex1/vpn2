<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- MENU BUTTON -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuCard"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardElevation="0dp">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_lister"
                android:padding="8dp"
                android:contentDescription="Menu"
                app:tint="@color/text_primary" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Spacer -->
        <View
            android:id="@+id/spacerView"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- PREMIUM CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/premiumCard"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="@dimen/corner_radius_large"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/premiumLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/premiumIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_crown"/>

                <TextView
                    android:id="@+id/premiumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Server Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardServer"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="90dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="999dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:id="@+id/serverInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp">

            <!-- Flag -->
            <ImageView
                android:id="@+id/flages"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/flag_sha"
                android:scaleType="centerCrop" />

            <!-- Country + IP -->
            <LinearLayout
                android:id="@+id/countryIpLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Germany"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvIp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45.123.67.89"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Ping -->
            <LinearLayout
                android:id="@+id/llPing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp">

                <View
                    android:id="@+id/pingBar1"
                    android:layout_width="4dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/ping_low" />

                <View
                    android:id="@+id/pingBar2"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/ping_low" />

                <View
                    android:id="@+id/pingBar3"
                    android:layout_width="4dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/ping_low" />

                <View
                    android:id="@+id/pingBar4"
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="@color/ping_low" />
            </LinearLayout>

            <!-- Arrow -->
            <ImageView
                android:id="@+id/openLister"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/str2"
                app:tint="@color/text_secondary"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Circle container -->
    <FrameLayout
        android:id="@+id/circleContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="180dp"
        android:paddingStart="-100dp"
        android:paddingEnd="-100dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Glow view -->
        <View
            android:id="@+id/glow_view"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:background="@drawable/green_glow_circle"/>

        <!-- Black circle background -->
        <View
            android:id="@+id/blackCircle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/black_circle"/>

        <!-- Green border -->
        <View
            android:id="@+id/greenBorderCircle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/green_border_circle"/>

        <!-- Shield -->
        <ImageView
            android:id="@+id/shit_knop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/shit_knop"
            android:scaleType="centerInside"/>

        <!-- Lightning -->
        <ImageView
            android:id="@+id/moln_knop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/moln_knop"
            android:scaleType="centerInside"/>
    </FrameLayout>

    <!-- Session status -->
    <TextView
        android:id="@+id/textOnorOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сессия открыта"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="390dp" />

    <!-- Hint text -->
    <TextView
        android:id="@+id/textStatic"
        android:layout_width="250dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Настройте Axiom VPN под себя через ползунки ниже"
        android:textSize="15sp"
        android:textColor="@color/text_tertiary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="430dp" />

    <!-- Background pill for VPN switch -->
    <View
        android:id="@+id/bd1"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/black_rounded_pill"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="490dp" />

    <!-- VPN Control text -->
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VPN Control"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/bd1"
        app:layout_constraintLeft_toLeftOf="@id/bd1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp" />

    <!-- VPN switch (iOS style) -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/knop5Switch"
        android:layout_width="56dp"
        android:layout_height="32dp"
        android:paddingStart="-10dp"
        android:paddingEnd="-10dp"
        android:clipToPadding="false"
        android:checked="false"
        android:thumb="@drawable/ios_switch_thumb"
        app:track="@drawable/ios_switch_track"
        android:showText="false"
        app:thumbTint="@color/white"
        app:trackTint="@color/ios_switch_track_tint"
        app:trackTintMode="src_in"
        app:switchMinWidth="54dp"
        android:minWidth="54dp"
        android:minHeight="32dp"
        app:layout_constraintTop_toTopOf="@id/bd1"
        app:layout_constraintEnd_toEndOf="@id/bd1"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="9dp" />

    <!-- Background pill for Zapret switch -->
    <View
        android:id="@+id/bd2"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/black_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Zapret switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/knop6Switch"
        android:layout_width="54dp"
        android:layout_height="32dp"
        android:paddingStart="-10dp"
        android:paddingEnd="-6dp"
        android:clipToPadding="false"
        android:checked="false"
        android:thumb="@drawable/ios_switch_thumb"
        app:track="@drawable/ios_switch_track"
        android:showText="false"
        app:thumbTint="@color/white"
        app:trackTint="@color/ios_switch_track_tint"
        app:trackTintMode="src_in"
        app:switchMinWidth="54dp"
        android:minWidth="54dp"
        android:minHeight="32dp"
        app:layout_constraintTop_toTopOf="@id/bd2"
        app:layout_constraintEnd_toEndOf="@id/bd2"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="9dp" />

    <!-- Zapret Control text -->
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapret Control"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/bd2"
        app:layout_constraintLeft_toLeftOf="@id/bd2"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp" />

    <!-- Bottom buttons background -->
    <View
        android:id="@+id/bd3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/black_rounded_pill"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="630dp"
        android:layout_marginHorizontal="20dp" />

    <!-- Bottom button 1 -->
    <ImageButton
        android:id="@+id/knop7"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_menus_one"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:foreground="@drawable/ripple_green"
        app:layout_constraintTop_toTopOf="@id/bd3"
        app:layout_constraintStart_toStartOf="@id/bd3"
        app:layout_constraintEnd_toStartOf="@id/knop8"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp" />

    <!-- Bottom button 2 -->
    <ImageButton
        android:id="@+id/knop8"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_menus_two"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:foreground="@drawable/ripple_green"
        app:layout_constraintTop_toTopOf="@id/bd3"
        app:layout_constraintStart_toEndOf="@id/knop7"
        app:layout_constraintEnd_toStartOf="@id/knop9"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="11dp" />

    <!-- Bottom button 3 -->
    <ImageButton
        android:id="@+id/knop9"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_menus_thee"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:foreground="@drawable/ripple_green"
        app:layout_constraintTop_toTopOf="@id/bd3"
        app:layout_constraintStart_toEndOf="@id/knop8"
        app:layout_constraintEnd_toStartOf="@id/knop10"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="11dp" />

    <!-- Bottom button 4 -->
    <ImageButton
        android:id="@+id/knop10"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_menus_for"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:foreground="@drawable/ripple_green"
        app:layout_constraintTop_toTopOf="@id/bd3"
        app:layout_constraintStart_toEndOf="@id/knop9"
        app:layout_constraintEnd_toEndOf="@id/bd3"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="11dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
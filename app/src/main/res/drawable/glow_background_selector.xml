<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Нажато → серый фон -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#4D4D4D" /> <!-- серый -->
            <stroke android:width="2dp" android:color="#808080" />
        </shape>
    </item>

    <!-- Обычное состояние → зелёный glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#0034C759" /> <!-- полупрозрачный зелёный -->
            <stroke android:width="2dp" android:color="#34C759" />
        </shape>
    </item>
</selector>